@model ResponseModel<ChangePassword>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                @* <button type="button" id="btnAddNewItem" class="btn btn-primary btn-md pull-right mr-2 divformSave_Hide"
                        onclick="fnLoadParialView('divformSave', '@Url.Action("Partial_AddEditForm", "City", new { area = "Admin" })');">
                    <i class="bi bi-plus-circle"></i></i> &nbsp; Add New City
                </button>

                <button type="button" id="btnBackToList" class="btn btn-primary btn-md pull-right mr-2 divformSave_Display d-none" onclick="fnBackToList();">
                    <i class="bi bi-arrow-left-circle"></i> &nbsp; Back To List
                </button> *@
            </div>
            <h4 class="page-title">Change Password</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-12">
        <div class="card">

            <!-- FORM CONTAINER (same as Role) -->
            <div class="card-header p-0">
                <form id="formSave"
                      action="@Url.Action("Save", "ChangePassword", new { area = "Admin" })"
                      method="post">

                    <div class="row no-gutters" id="divformSave">

                        <input type="hidden" name="Obj.Id" value="@Model.Obj.Id" />

                        <div class="col-md-12">
                            <div class="card card-info mb-0">

                                <div class="card-header">
                                    <h3 class="card-title"></h3>
                                </div>

                                <div class="card-body form-horizontal">
                                    <div class="row no-gutters">
                                        <div class="col-12">

                                            <!-- Old Password -->
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label text-end">Old Password<span style="color:red">*</span></label>
                                                <div class="col-4">
                                                    <div class="input-group input-group-merge">
                                                        <input type="password" id="OldPassword" name="Obj.OldPassword" class="form-control form-control-sm" placeholder="********" autocomplete="off">
                                                        <div class="input-group-text input-group-text-sm" data-password="true">
                                                            <span class="password-eye"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <label class="col-2 col-form-label text-end">New Password<span style="color:red">*</span></label>
                                                <div class="col-4">
                                                    <div class="input-group input-group-merge">
                                                        <input type="password" id="NewPassword" name="Obj.NewPassword" class="form-control form-control-sm" placeholder="********" autocomplete="off">
                                                        <div class="input-group-text input-group-text-sm" data-password="true">
                                                            <span class="password-eye"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- New Password -->
                                            <!-- Confirm Password -->
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label text-end">Confirm Password<span style="color:red">*</span></label>
                                                <div class="col-4">
                                                    <div class="input-group input-group-merge">
                                                        <input type="password" id="ConfirmPassword" name="Obj.ConfirmPassword" class="form-control form-control-sm" placeholder="********" autocomplete="off">
                                                        <div class="input-group-text input-group-text-sm" data-password="true">
                                                            <span class="password-eye"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <div class="row no-gutters">
                                        <div class="col-sm-1">&nbsp;</div>
                                        <div class="col-sm-6 text-center">
                                            <button type="submit" class="btn btn-success btnSubmit">
                                                Save
                                            </button>
                                            @* <button type="button"
                                                    class="btn btn-danger"
                                                    onclick="fnBackToList();">
                                                Cancel
                                            </button> *@
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            fnShowHidePassword();
        });
    </script>
}
