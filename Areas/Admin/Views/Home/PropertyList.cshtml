@model ResponseModel<LoginViewModel>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";

}


@section Styles {
	<style type="text/css">
		.select2-container .select2-selection--multiple .select2-selection__rendered {
			display: contents !important;
		}
	</style>
}

<!-- start page title -->
<div class="row">
	<div class="col-12">
		<div class="page-title-box">
			<div class="page-title-right">

				@* <button type="button" id="btnAddNewItem" class="btn btn-primary btn-md pull-right mr-2 divformSave_Hide"
						onclick="fnLoadParialView('divformSave', '@Url.Action("Partial_AddEditForm", "Lead", new { area = "Admin" })');">
					<i class="bi bi-plus-circle"></i> &nbsp; Add New
				</button> *@

				<button type="button" id="btnBackToList" class="btn btn-primary btn-md pull-right mr-2" onclick="fnBackToList('@Url.Action("Index", "Home", new { area = "Admin" })');">
					<i class="bi bi-arrow-left-circle"></i> &nbsp; Back To List
				</button>
			</div>
			<h4 class="page-title">Property Summary</h4>
		</div>
	</div>
</div>
<!-- end page title -->

<div class="row">
	<div class="col-12">
		<div class="card">
			
			<div class="card-body ">
				@if (Model.SelectListItems != null && Model.Obj.PropertiesList != null)
				{
					// Required display order
					@* var statusOrder = new List<string> { "NEW", "INPROC", "WON", "LOST" }; *@

					var propertylist = Model.SelectListItems
					.Where(x => x.Group == "PropertyType")
					.OrderBy(x => x.Value3)
					.ToList();

					<div class="mb-3 d-flex flex-wrap gap-2">
						@foreach (var propertytype in propertylist)
						{
							int propertycount = Convert.ToInt32(propertytype.Value2);

							string[] badgeClasses =
							{
										"bg-primary",
										"bg-success",
										"bg-warning text-dark",
										"bg-info",
										"bg-danger",
										"bg-secondary",
										"bg-dark"
							};
							
								int index = Math.Abs(propertytype.Value.GetHashCode()) % badgeClasses.Length;
								string badgeClass = badgeClasses[index];

								<span role="button"
									  class="badge @badgeClass px-3 py-2 fs-6"
								  onclick="filterByPropertyType('@propertytype.Value')">
									@propertytype.Text (@propertycount)
								</span>
							

							
						}
					</div>
				}
				<div class="row no-gooters ">
					<div class="col-md-12 my-1">
						<div class="responsive-table-plugin">
							<div class="table-rep-plugin">
								<div class="table-responsive" data-pattern="priority-columns">
									<table class="table table-sm table-bordered table-striped dt-responsive nowrap w-100 table_Common_SrNo">
										<thead>
											<tr>
												<th>SrNo</th>
												<th>Properties Category</th>
												<th>Properties Type</th>
												<th>Title</th>
												@* <th>Description</th> *@
												<th>Price</th>
												<th>Area Square Ft</th>
												<th>Owner Name</th>
												<th>Owner Mobile</th>
												<th>Builder Name</th>
												<th>Availability Status</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody>
											@if (Model.Obj != null)
											{
												foreach (var item in Model.Obj.PropertiesList.OrderBy(x => x.Id))
												{
													<tr>
														<td></td>
														<td>@item.Property_Category</td>
														<td>@item.Property_Type</td>
														<td>@item.Title</td>
														@* <td>@item.Description</td> *@
														<td>@item.Price</td>
														<td>@item.AreaSqft</td>
														<td>@item.OwnerName</td>
														<td>@item.OwnerMobile</td>
														<td>@item.BuilderName</td>
														<td>@item.AvailabilityStatus_TEXT</td>
														<td>
															<div class="btn-group">

																<button type="button"
																		class="btn btn-info btn-sm btn-flat ml-2"
																		onclick="fnShow_Modal('@Url.Action("Partial_AddEditForm_PropertyDetail", "Home")?Id=@item.Id','Property Detail',false,'html',false,false)">
																	View Detail
																</button>

															</div>
														</td>

														
													</tr>
												}
											}
										</tbody>
									</table>
								</div> <!-- end .table-responsive -->

							</div> <!-- end .table-rep-plugin-->
						</div> <!-- end .responsive-table-plugin-->
					</div>

					<div class="clearfix"></div>
				</div>
			</div> <!-- end card body-->
		</div> <!-- end card -->
	</div><!-- end col-->
</div> <!-- end row-->
