<div class="row">
	<div class="col-12">
		<div class="card">
			
			<div class="card-body ">
				@if (Model.SelectListItems != null && Model.Obj.PropertiesList != null)
				{
					@* var propertylist = Model.SelectListItems
					.Where(x => x.Group == "PropertyType")
					.OrderBy(x => x.Value3)
					.ToList(); *@

					<ul class="nav nav-pills bg-nav-pills nav-justified mb-3">
						@foreach (var item in Model.SelectListItems
											.Where(x => x.Group == "PropertyType")
											.OrderBy(x => Convert.ToInt32(x.Value3) == 0 ? 1 : 0)   // 0 goes last
											.ThenBy(x => Convert.ToInt32(x.Value3)))              // normal order
						{
							long typeId = Convert.ToInt64(item.Value);
							int count = Convert.ToInt32(item.Value2);

							bool isActive = selectedTypeId == typeId;

							<li class="nav-item">
								<a class="nav-link rounded-0 @(isActive ? "active" : "")"
								   href="@Url.Action("PropertyList", "Home",
								 new { area = "Admin", Type_Id = typeId })">
							@item.Text (@count)
						</a>
					</li>
										}
					</ul>
				}
	
				<div class="row no-gooters ">
					<div class="col-md-12 my-1">
						<div class="responsive-table-plugin">
							<div class="table-rep-plugin">
								<div class="table-responsive" data-pattern="priority-columns">
									<table class="table table-sm table-bordered table-striped dt-responsive nowrap w-100 table_Common_SrNo">
										<thead>
											<tr>
												<th>SrNo</th>
												<th>Properties Category</th>
												<th>Properties Type</th>
												<th>Title</th>
												@* <th>Description</th> *@
												<th>Price</th>
												<th>Area Square Ft</th>
												<th>Owner Name</th>
												<th>Owner Mobile</th>
												<th>Builder Name</th>
												<th>Availability Status</th>
												<th>Action</th>
											</tr>
										</thead>
										<tbody>
											@if (Model.Obj != null)
											{
												foreach (var item in Model.Obj.PropertiesList.OrderBy(x => x.Id))
												{
													<tr>
														<td></td>
														<td>@item.Property_Category</td>
														<td>@item.Property_Type</td>
														<td>@item.Title</td>
														@* <td>@item.Description</td> *@
														<td>@item.Price</td>
														<td>@item.AreaSqft</td>
														<td>@item.OwnerName</td>
														<td>@item.OwnerMobile</td>
														<td>@item.BuilderName</td>
														<td>@item.AvailabilityStatus_TEXT</td>
														<td>
															<div class="btn-group">

																<button type="button"
																		class="btn btn-primary btn-sm btn-flat ml-2"
																		onclick="fnShow_Modal('@Url.Action("Partial_AddEditForm_PropertyDetail", "Home")?Id=@item.Id','Property Detail',false,'html',false,false)">
																	View Detail
																</button>

															</div>
														</td>

														
													</tr>
												}
											}
										</tbody>
									</table>
								</div> <!-- end .table-responsive -->

							</div> <!-- end .table-rep-plugin-->
						</div> <!-- end .responsive-table-plugin-->
					</div>

					<div class="clearfix"></div>
				</div>
			</div> <!-- end card body-->
		</div> <!-- end card -->
	</div><!-- end col-->
</div> <!-- end row-->
