@model ResponseModel<Lead>

@{
	Layout = null;
}

<div class="col-md-12">
	<div class="card card-info">

		<div class="card-header">
			<h3 class="card-title">@(Model.Obj != null && Model.Obj.Id > 0 ? "Edit" : "Create") Lead</h3>
			<input type="text" class="form-control d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">
		</div>

		<div class="card-body form-horizontal">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="form-group row" style=" padding-top: 20px;">
						<label for="Name" class="col-2 col-form-label text-end">Name<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control " id="Name" name="Name" value="@Model.Obj.Name"
								   placeholder="Name" autocomplete="off">
						</div>
						<label for="Name" class="col-2 col-form-label text-end">Mobile No<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control isNumberKey" id="Mobile" name="Mobile" value="@Model.Obj.Mobile"
								   placeholder="Mobile No" autocomplete="off" maxlength="10">
						</div>
					</div>
					<div class="form-group row" style=" padding-top: 20px;">
						<label for="Name" class="col-2 col-form-label text-end">Email<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control " id="Email" name="Email" value="@Model.Obj.Email"
								   placeholder="Email" autocomplete="off">
						</div>
						<label for="Name" class="col-2 col-form-label text-end">Requirement<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control" id="Requirement" name="Requirement" value="@Model.Obj.Requirement"
								   placeholder="Requirement" autocomplete="off">
						</div>
					</div>

					<div class="form-group row" style=" padding-top: 20px;">
						<label for="Name" class="col-2 col-form-label text-end">Preferred City <span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control  show-tick select2" id="Preferred_City_Id" name="Preferred_City_Id" onchange="fnChange_Area(this , '#Preferred_Area_Id')">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "City"))
									{
										if (item.Value.ToString() == Model.Obj.Preferred_City_Id.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>
						<label for="Name" class="col-2 col-form-label text-end">Preferred Area<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control  show-tick select2" id="Preferred_Area_Id" name="Preferred_Area_Id">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "Area"))
									{
										if (item.Value.ToUpper() == Model.Obj.Preferred_Area_Id.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>
					</div>

					<div class="form-group row" style=" padding-top: 20px;">
						<label for="Name" class="col-2 col-form-label text-end">Landmark</label>
						<div class="col-sm-4">
							<input type="text" class="form-control " id="Landmark" name="Landmark" value="@Model.Obj.Landmark"
								   placeholder="Landmark" autocomplete="off">
						</div>
						<label for="Name" class="col-2 col-form-label text-end">Property Type<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<select class="form-control  show-tick select2" id="PropertyType" name="PropertyType">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "PropertyType"))
									{
										if (item.Value.ToUpper() == Model.Obj.PropertyType.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>
					</div>
					<div class="form-group row" style=" padding-top: 20px;">
						<label for="Name" class="col-2 col-form-label text-end">Lead Source <span style="color:red">*</span> </label>
						<div class="col-sm-4">
							<select class="form-control  show-tick select2" id="LeadSource_Value" name="LeadSource_Value">
								<option value="0">-- Select --</option>
								@if (Model.SelectListItems != null && Model.SelectListItems.Count > 0)
								{
									foreach (SelectListItem_Custom item in Model.SelectListItems.Where(x => x.Group == "LEADSOURCE"))
									{
										if (item.Value.ToUpper() == Model.Obj.LeadSource_Value.ToString())
										{
											<option value="@item.Value" selected>@item.Text</option>
										}
										else
										{
											<option value="@item.Value">@item.Text</option>
										}
									}
								}
							</select>

						</div>
						<label for="Name" class="col-2 col-form-label text-end">Budget Min</label>
						<div class="col-sm-4">
							<input type="text" class="form-control  isNumberKey_Decimal" id="BudgetMin" name="BudgetMin" value="@Model.Obj.BudgetMin"
								   placeholder="Budget Min" autocomplete="off" maxlength="12">
						</div>
					</div>
					<div class="form-group row" style=" padding-top: 20px;">
						<label for="Name" class="col-2 col-form-label text-end">Budget Max</label>
						<div class="col-sm-4">
							<input type="text" class="form-control  isNumberKey_Decimal" id="BudgetMax" name="BudgetMax" value="@Model.Obj.BudgetMax"
								   placeholder="Budget Max" maxlength="12" autocomplete="off">
						</div>
					</div>					
					
					
 
					
				</div>
			</div>
		</div>

		<div class="card-footer">
			<div class="row no-gutters">
				<div class="col-sm-1">&nbsp;</div>
				<div class="col-sm-6 text-left">
					<button type="submit" class="btn btn-success btnSubmit">Save</button>
					<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common');">Cancel</button>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {

		});


	</script>
}
